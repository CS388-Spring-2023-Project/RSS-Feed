<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favoritesPackage.FavoriteFragment"
    android:id="@+id/favoritesFragment"
    >
    <ImageView
        android:id="@+id/topBackground"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@drawable/wave6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/favoritesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_favorites"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="30dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/topBackground"
        android:weightSum="1">
        <EditText
            android:id="@+id/searchedWord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:maxLines="1"
            android:ems="10"
            android:textColor="@color/color5"
            android:background="@drawable/corner_borders"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_search"
            android:layout_marginHorizontal="10dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="Search"
            app:cornerRadius="30dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/greenLime"/>


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoritesRV"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/searchContainer"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>